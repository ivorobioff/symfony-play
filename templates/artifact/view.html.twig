{% extends 'base.html.twig' %}

{% block title %}Artifacts{% endblock %}

{% block body %}
    <p>
        {{ artifact.content }}
    </p>
    <hr>
    <ul>
        <li>Created At: {{ artifact.createdAt|date('Y-m-d H:m') }}</li>
        <li>Created By: {{ artifact.createdBy.username }}</li>
    </ul>
    <hr>
    <a href="{{ path('artifact_index') }}">View All Artifacts</a> |
    <a href="{{ path('artifact_create') }}">Create Another Artifact</a>
{% endblock %}
